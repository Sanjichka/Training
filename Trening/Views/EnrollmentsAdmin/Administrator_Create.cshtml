@model Trening.ViewModels.EnrolAdminVM

@{
    ViewData["Title"] = "Enroll";
}

<h1>Create</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Administrator_Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrainingID" class="control-label">Course</label>
                <select asp-for="TrainingID" class="form-control" asp-items="ViewBag.TrainingID"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Users</label>
                <select asp-for="SelectedUsers" class="form-control js-example-basic-multiple"
                        asp-items="Model.UserList"> </select>
                <span asp-validation-for="SelectedUsers" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
$(document).ready(function () {
    $("#SelectedUsers").select2();
});
    </script>
}
