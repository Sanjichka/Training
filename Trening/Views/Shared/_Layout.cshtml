<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trening</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: lightgrey;
            
        }
        footer {
            background-color: #ff5660;
        }
        a {
            color: #ff5660;
            text-decoration: underline;
        }
            a:hover {
                color: #0a6fe1;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #ff5660">
            <div class="container">
                <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: bolder; font-size:x-large"><img src="~/wel/home.png" alt="home"/></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight: bolder; font-size:x-large" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight: bolder; font-size:x-large" asp-area="" asp-controller="Coaches" asp-action="Index">Coaches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight: bolder; font-size:x-large" asp-area="" asp-controller="Trainings" asp-action="Index">Trainings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight: bolder; font-size:x-large" asp-area="" asp-controller="Enrollments" asp-action="Index">Enrollments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight: bolder; font-size:x-large" asp-area="" asp-controller="EnrollmentsAdmin" asp-action="Administrator_Create">EnrolLista</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight: bolder; font-size:x-large" asp-area="" asp-controller="Disciplines" asp-action="Index">Disciplines</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight: bolder; font-size:x-large" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-dark" style="font-weight: bolder">
        <div class="container">
            &copy; 2021 - Trening - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-dark">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
