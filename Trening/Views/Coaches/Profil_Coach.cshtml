@model Trening.Models.Coach

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<br />
<br />
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        background-color: #b4f992;
        padding: initial;
    }

    .title {
        color: grey;
        font-size: 18px;
    }

    #i {
        padding-top: 5%;
        display: block;
        margin-left: auto;
        margin-right: auto
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="card">
    <img id="i" src="~/wel/coach.png" alt="Coach" height="110" width="110">
    <br />
    <h1>@ViewData["C"]</h1>
    <br />
    @{
        TimeSpan span = DateTime.Now - Model.BirthDate;
        double years = (double)span.TotalDays / 365.2425;
        int y = (int)years;
    }
    <p class="title">Coach at FitMk</p>
    <p>@y years </p>
    <p>@Html.DisplayFor(model => model.ExerciseRank) Rank</p>
    @{
        if (Model.PhoneNumber != null)
        {
            <p>@Model.PhoneNumber</p>
        }
    }
    <p>@Html.DisplayFor(model => model.Mail)</p>
</div>
