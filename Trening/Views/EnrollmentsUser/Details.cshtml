@model Trening.Models.Enrollment

@{
    ViewData["Title"] = "Details";
}

@{
    if (User.IsInRole("Userr"))
    {
        <br />
        <h1 style="color: #62a7f5 ">Details for the Enrollment</h1>
        <br />
    }
    else if (User.IsInRole("Coach"))
    {
        <br />
        <h1 style="color: #57d627 ">Details for the Enrollment</h1>
        <br />
    }
    else
    {
        <br />
        <h1 style="color: #ff5660 ">Details for the Enrollment</h1>
        <br />
    }
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FinishDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FinishDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Embg)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Training)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Training.Platform)
        </dd>
    </dl>
</div>
