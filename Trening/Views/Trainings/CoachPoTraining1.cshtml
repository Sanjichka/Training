@model Trening.Models.Coach

@{
    ViewData["Title"] = "Details";
}

@{
    if (User.IsInRole("Userr"))
    {
        <br />
        <h4 style="color: #62a7f5; font-weight: bolder">Details for Coach: @ViewData["Coach"]</h4>
        <br />
    }
    else if (User.IsInRole("Coach"))
    {
        <br />
        <h4 style="color: #57d627; font-weight: bolder">Details for Coach: @ViewData["Coach"]</h4>
        <br />
    }
    else
    {
        <br />
        <h4 style="color: #ff5660; font-weight: bolder">Details for Coach: @ViewData["Coach"]</h4>
        <br />
    }
}

